<!--suppress AndroidDomInspection -->
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/my_spinner_color</item>
        <item name="android:background">@color/colorBackground</item>
    </style>

    <style name="mySpinnerStyle">
        <item name="android:textColor">@color/my_spinner_color</item>
        <item name="android:background">@color/colorBackground</item>
    </style>

    <style name="test" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:textSize">11.5sp</item>
    </style>

    <style name="TextAppearence.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DefaultTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="addAccountTitle">@android:color/white</item>
        <item name="addAccountLoginBackground">@android:color/white</item>
        <item name="addAccountProgressBar">@color/colorAccent</item>
        <item name="addAccountField" parent="@android:style/TextAppearance">
            @style/TextAppearence.TextInputLayout
        </item>
        <item name="addAccountLoginButton">@color/colorPrimary</item>

        <item name="colorBackground">@color/colorBackground</item>
        <item name="colorPrimary">@color/colorBackground</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorDarkGrey">@color/colorDarkGrey</item>
        <item name="colorLightGrey">@color/colorLightGrey</item>
        <item name="colorDataUsed">@color/colorDataUsed</item>
        <item name="colorDaysLeft">@color/colorDaysLeft</item>

        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
    </style>

    <style name="DefaultTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DefaultTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="DefaultTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
